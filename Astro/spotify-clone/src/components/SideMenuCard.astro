---
import type { Playlist } from "@/lib/data";
import { Image } from "astro:assets";

interface Props {
  playlists: Playlist;
}

const { playlists } = Astro.props;
const { id, cover, title, artists, color } = playlists;

const artistsString = artists.join(", ");
---

<a
  href={`/playlist/${id}`}
  class="playlist-item transition-all duration-300 flex relative p-2 overflow-hidden items-center gap-2 rounded-s-md hover:bg-zinc-800"
>
  <picture class="h-12 w-12 flex-none">
    <Image
      src={cover as string}
      alt={`Cover of ${title} by ${artistsString}`}
      class="object-cover w-full h-full rounded-md"
      width={12}
      decoding="async"
      height={12}
      loading={"eager"}
    />
  </picture>
  <div class="flex flex-auto flex-col truncate">
    <h4 class="font-semibold text-sm">{title}</h4>
    <span class="text-xs text-gray-400">{artistsString}</span>
  </div>
</a>
