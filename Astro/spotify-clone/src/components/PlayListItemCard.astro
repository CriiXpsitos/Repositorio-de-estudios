---
import type { Playlist } from "@/lib/data";
import { CardPlayButton } from "./CardPlayButton.jsx";

interface Props {
  playlists: Playlist;
}

const { playlists } = Astro.props;
const { id, cover, title, artists, albumId, color } = playlists;

const artistsString = artists.join(", ");
---

<article>
  <div class="absolute right-4 bottom-10 translate-4-y"></div>
  <a
    href={`/playlist/${id}`}
    class="playlist-item transition-all duration-300 flex relative p-2 overflow-hidden items-center gap-4 rounded-md hover:bg-zinc-800/50 w-full group SHADOW-LG bg-zinc-800/50"
    transition:name=`playlist-id-${id} box`
  >
    <picture class="h-12 w-12 flex-none">
      <img
        src={cover}
        alt={`Cover of ${title} by ${artistsString}`}
        class="object-cover w-full h-full rounded-md"
        transition:name=`playlist-id-${id} image`
      />
    </picture>
    <div class="flex flex-auto flex-col truncate pr-12">
      <h4
        transition:name=`playlist-id-${id} title`
        class="font-semibold text-sm"
      >
        {title}
      </h4>
      <span
        transition:name=`playlist-id-${id} artists`
        class="text-xs text-gray-400">{artistsString}</span
      >
    </div>
    <div
    id="play-button"
      class="absolute right-4 translate-y-5 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300 opacity-0"
    >
      <CardPlayButton id={id} client:load />
    </div>
  </a>
</article>

<style>
  #play-button {
    pointer-events: all;
  }
</style>